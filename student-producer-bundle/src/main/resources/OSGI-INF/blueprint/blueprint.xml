<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 
                               http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

        <bean id="studentRepository" class="com.example.repo.StudentRepositoryImpl"/>
        <bean id="studentService" class="com.example.impl.StudentServiceImpl">
            <argument ref="studentRepository"/>
        </bean>
        <service ref="studentService" interface="com.example.api.StudentService"/>
    </service>

</blueprint>